    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        android:layout_marginTop="@dimen/view_margin"
        android:background="@drawable/login_layout_shape"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/cardview_background"
            android:gravity="center"
            android:paddingLeft="@dimen/cardview_in_left_padding"
            android:paddingRight="@dimen/cardview_in_left_padding"
            android:text="帐号"
            android:textColor="@color/text_color"
            android:textSize="@dimen/endemic_area_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/line" />

        <EditText
            android:id="@+id/zhanghao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:lines="1"
            android:textCursorDrawable="@drawable/login_layout_edittext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        android:layout_marginTop="@dimen/view_margin"
        android:background="@drawable/login_layout_shape"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/cardview_background"
            android:gravity="center"
            android:paddingLeft="@dimen/cardview_in_left_padding"
            android:paddingRight="@dimen/cardview_in_left_padding"
            android:text="密码"
            android:textColor="@color/text_color"
            android:textSize="@dimen/endemic_area_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/line" />

        <EditText
            android:id="@+id/mima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="textPassword"
            android:lines="1"
            android:textCursorDrawable="@drawable/login_layout_edittext" />
    </LinearLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        android:layout_marginTop="@dimen/view_margin"
        android:background="@drawable/login_layout_shape_login"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/login_button_text_size" />

</LinearLayout>
