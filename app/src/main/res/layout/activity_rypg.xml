<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_danger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="enjoyor.enjoyorzemobilehealth.activity.RypgActivity"
    >

    <FrameLayout
        android:id="@+id/no1"
        android:layout_width="match_parent"
        android:layout_height="46.08dp"
        android:background="@color/my_bule"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"

            />
        <TextView
            android:layout_gravity="center"
            android:textSize="@dimen/text_1"
            android:textColor="#fff"
            android:gravity="center"
            android:text="入院评估单"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <View
        android:id="@+id/no2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/no1"
        android:background="#fff" />
    <!--病人栏-->


    <LinearLayout
        android:id="@+id/no3"
        android:layout_width="match_parent"
        android:layout_height="142.5dp"
        android:layout_below="@+id/no2"
        android:animateLayoutChanges="true"
        android:background="@drawable/yizhu_img15x"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:src="@drawable/icon_men" />

            <TextView
                android:id="@+id/bingrenname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:background="#00ffffff"
                android:text="于小斐"
                android:textColor="#333333"
                android:textSize="@dimen/text_1" />

            <TextView
                android:id="@+id/chuanghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:background="@color/my_bule"
                android:text="1-101床"
                android:textColor="#fff"
                android:textSize="@dimen/text_4" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="18dp"
            android:background="#98403e3e">


        </LinearLayout>
    </LinearLayout>
    <!--内容栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_menu"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:background="#EDECEC"
            android:fadeScrollbars="false"
            android:scrollbars="none" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/home"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y30"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="#f9f9f9"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/x15"
                        android:text="12378"
                        android:textColor="@color/home_top_tit"
                        android:textSize="12sp" />


                    <ImageView
                        android:id="@+id/tj"
                        android:layout_width="@dimen/x16"
                        android:layout_height="@dimen/y16"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x15"
                        android:padding="@dimen/x1"
                        android:src="@drawable/btn_pg_add" />
                </RelativeLayout>
                <ListView
                    android:id="@+id/lv_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null" />
            </LinearLayout>

            <RelativeLayout
                android:layout_above="@+id/home"
                android:id="@+id/rl_home_t"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#f9f9f9"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv__home_titile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/x15"
                    android:text="12378"
                    android:textColor="@color/home_top_tit"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_toRightOf="@+id/tv__home_titile"
                    android:padding="@dimen/x5"
                    android:text="评估规则"
                    android:textColor="@color/home_top_con"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_denger_add"
                    android:layout_width="@dimen/x16"
                    android:layout_height="@dimen/y16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:padding="@dimen/x1"
                    android:src="@drawable/btn_pg_add" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
