<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zxyz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="enjoyor.enjoyorzemobilehealth.activity.ZXYZActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/no1"
            android:layout_width="match_parent"
            android:layout_height="46.08dp"
            android:background="@color/my_bule"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/text_1"
                android:textColor="#fff"
                android:gravity="center"
                android:text="执行医嘱"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <View
            android:id="@+id/no2"
            android:layout_below="@+id/no1"
            android:background="#fff"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:text="您扫描的药物被暂停"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:textColor="#333333"
            android:padding="4dp"
            android:background="#ffeaab"/>
        <TextView
            android:text="暂停"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:textColor="#ff6600"
            android:padding="4dp"
            android:background="#ffeaab"/>
    </LinearLayout>
    <LinearLayout
    android:background="#f9f9f9"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:text="医嘱名称"
        android:textSize="12sp"
        android:textColor="#a3a3a3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"/>
    <TextView
        android:id="@+id/ff1"
        android:textSize="17sp"
        android:textColor="#3f90eb"
        android:text="氯化钾注射液(塑料安)"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="实际计量"
            android:textSize="12sp"
            android:textColor="#a3a3a3"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ff2"
            android:text="7.000"
            android:textSize="12sp"
            android:textColor="#555555"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="ML"
            android:textSize="12sp"
            android:textColor="#a3a3a3"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
    <View
        android:background="#dedede"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:text="执行医嘱"
        android:textSize="12sp"
        android:textColor="#a3a3a3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cc1"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_kaishi3x"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cc2"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_zanting3x"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂停"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cc3"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_jixu3x"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="继续"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cc4"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_jieshu3x"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cc5"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_zhongduan3x"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中断"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cc6"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_tingyong3x"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停用"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
