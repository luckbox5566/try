<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sscx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="enjoyor.enjoyorzemobilehealth.activity.SscxActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46.08dp"
        android:background="@color/my_bule"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_gravity="center"
            android:textSize="@dimen/text_2"
            android:textColor="#fff"
            android:gravity="center"
            android:text="手术查询"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/sscx_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#fffcf3">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_men"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/tx"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center">
                <TextView
                    android:text=""
                    android:id="@+id/mz"
                    android:textSize="@dimen/text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/nl"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/ch"
                android:text=""
                android:textColor="#fff"
                android:background="@color/my_bule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="#f5f2f2"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <View
        android:background="#dedede"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="56.5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ss1"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"/>
        <TextView
            android:id="@+id/ss2"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:textColor="#888888"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#888888"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
