<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="enjoyor.enjoyorzemobilehealth.activity.BingQuYiZhuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/no1"
            android:layout_width="match_parent"
            android:layout_height="46.08dp"
            android:background="@color/my_bule"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/text_1"
                android:textColor="#fff"
                android:gravity="center"
                android:text="病区医嘱"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_marginRight="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:entries="@array/spingarr"
                >

                </Spinner>
        </FrameLayout>
        <View
            android:id="@+id/no2"
            android:layout_below="@+id/no1"
            android:background="#fff"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#ececec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/all_zhu"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#555555"
            android:text="共10组液体"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#00ffffff"/>

        <TextView
            android:id="@+id/all_zhu2"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#555555"
            android:text="未核对一组"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#00ffffff"/>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_re_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>
