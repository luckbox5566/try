<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bryz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="enjoyor.enjoyorzemobilehealth.activity.BryzActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/no1"
                android:layout_width="match_parent"
                android:layout_height="46.08dp"
                android:background="@color/my_bule"
                >
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_1"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:text="病人医嘱"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <View
                android:id="@+id/no2"
                android:layout_below="@+id/no1"
                android:background="#fff"
                android:layout_height="0.5dp"
                android:layout_width="match_parent"/>
        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/no3"
                        android:animateLayoutChanges="true"
                        android:layout_below="@+id/no2"
                        android:layout_width="match_parent"
                        android:layout_height="142.5dp"
                        android:orientation="vertical"
                        android:background="@drawable/yizhu_img15x">
                        <LinearLayout
                            android:id="@+id/bdf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="30dp">

                            <ImageView
                                android:src="@drawable/icon_men"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right"
                                android:id="@+id/imageView" />

                            <TextView
                                android:id="@+id/bingrenname"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="right"
                                android:text="于小斐"
                                android:background="#00ffffff"
                                android:textSize="@dimen/text_1"
                                android:textColor="#333333"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/chuanghao"
                                android:layout_gravity="right"
                                android:layout_marginTop="2dp"
                                android:text="1-101床"
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/text_4"
                                android:layout_height="wrap_content"
                                android:background="@color/my_bule"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="18dp"
                            android:background="#98403e3e"
                            android:layout_width="match_parent"
                            android:layout_height="22dp">
                            <TextView
                                android:layout_marginLeft="225dp"
                                android:textColor="#fff"
                                android:textSize="@dimen/text_4"
                                android:layout_gravity="center_vertical"
                                android:text="2016-05-26"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <View
                            android:id="@+id/mm"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="142.5dp"
                            android:background="#79c62020">
                        </View>
                        <LinearLayout
                            android:id="@+id/no5"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:background="#CCCCCC"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"/>

                            <com.ashokvarma.bottomnavigation.BottomNavigationBar
                                android:layout_gravity="bottom"
                                android:id="@+id/bottom_navigation_bar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </com.ashokvarma.bottomnavigation.BottomNavigationBar>
                        </LinearLayout>

                        <android.support.v4.view.ViewPager
                            android:id="@+id/no4"
                            android:layout_above="@+id/no5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/mm"
                            android:layout_alignParentStart="true">

                        </android.support.v4.view.ViewPager>


                    </RelativeLayout>
                </FrameLayout>


            </LinearLayout>

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>



</FrameLayout>
