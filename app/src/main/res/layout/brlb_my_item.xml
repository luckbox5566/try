<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_men"
                />

            <TextView
                android:layout_gravity="bottom|right"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:text="56"
                android:id="@+id/nianlin"
                android:background="@drawable/banyuan_text4"
                android:layout_centerInParent="true"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="#fff"

                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:text="于小斐"
                    android:textSize="@dimen/text_3"
                    android:textColor="#222222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:typeface="normal"/>
                <TextView
                    android:layout_marginLeft="7dp"
                    android:text="一级护理"
                    android:id="@+id/huli"
                    android:background="@drawable/banyuan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="9dp"
                    android:textColor="@color/mm1"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="9dp"
                    android:paddingLeft="9dp"/>
                <TextView
                    android:layout_marginLeft="7dp"
                    android:text="医嘱0个"
                    android:id="@+id/sffs"
                    android:background="@drawable/banyuan_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="9dp"
                    android:textColor="@color/mm2"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="9dp"
                    android:paddingLeft="9dp"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="发烧"
                    android:id="@+id/sffs2"
                    android:background="@drawable/banyuan_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="9dp"
                    android:textColor="@color/mm3"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="9dp"
                    android:paddingLeft="9dp"/>




                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/number"
                        android:textSize="12sp"
                        android:text="1-101床"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:textColor="#848484"
                        android:layout_marginRight="7dp"/>
                </FrameLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/content"
                android:textSize="13sp"
                android:text=""
                android:layout_marginRight="5dp"
                android:textColor="#797878"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>