<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/my_bule">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="手术详情"
            android:textColor="#fff"
            android:textSize="@dimen/text_1" />
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">
            <!--病人信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="142.5dp"
                android:layout_below="@+id/no2"
                android:animateLayoutChanges="true"
                android:background="@drawable/yizhu_img15x"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tx"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:src="@drawable/icon_men" />

                    <TextView
                        android:id="@+id/xm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="2dp"
                        android:background="#00ffffff"
                        android:text="于小斐"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_1" />

                    <TextView
                        android:id="@+id/ch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="2dp"
                        android:background="@color/my_bule"
                        android:text="1-101床"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_4" />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f9f9f9"
                >
                <TextView
                    android:id="@+id/sj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:text="17/05/04"
                    android:textSize="13sp"
                    android:textColor="#a3a3a3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp">
                <TextView
                    android:id="@+id/ssmc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阑尾节除，腹腔引流术"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:textSize="15sp"
                    android:textColor="#222222"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连续硬膜外阻滞麻醉"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:textSize="12sp"
                    android:textColor="#888888"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ys"
                        android:layout_marginLeft="14dp"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_zhudao" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主刀医师"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textSize="11sp"
                        android:textColor="#616161"/>
                    <TextView
                        android:id="@+id/zd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="高坡"
                        android:layout_marginLeft="5dp"
                        android:textSize="11sp"
                        android:textColor="#616161"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/br"
                        android:layout_marginLeft="8dp"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_mazui" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="麻醉人员"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textSize="11sp"
                        android:textColor="#616161"/>
                    <TextView
                        android:id="@+id/mzry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周杰"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textSize="11sp"
                        android:textColor="#616161"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/bl"
                        android:layout_marginLeft="8dp"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_bingli" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="病例状态"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textSize="11sp"
                        android:textColor="#616161"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正常"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textSize="11sp"
                        android:textColor="#616161"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#eeeeee" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/ssmx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="患者取仰卧位。。。。。。。。。。。。。。。。。。"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:lineSpacingExtra="7dp"
                    android:textSize="13sp"
                    android:textColor="#3c3c3c"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/expand_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:visibility="gone"
                android:gravity="center">
                <TextView
                    android:id="@+id/zksq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="展开"
                    android:textColor="#888888"
                    android:textSize="12sp"/>
                <ImageView
                    android:id="@+id/zk"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_expand" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#f9f9f9"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:text="术前诊断"
                    android:layout_marginLeft="14dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="11.5sp"
                    android:textColor="#777777"
                    android:background="@drawable/textview_border"/>
                <TextView
                    android:id="@+id/sqzd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="急性阑尾炎穿孔"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="14dp"
                    android:textSize="13sp"
                    android:textColor="#3c3c3c"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#eeeeee" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:text="术后诊断"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="14dp"
                    android:textSize="11.5sp"
                    android:textColor="#777777"
                    android:background="@drawable/textview_border"/>
                <TextView
                    android:id="@+id/shzd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="急性化脓性阑尾炎并穿孔"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="14dp"
                    android:textSize="13sp"
                    android:textColor="#3c3c3c"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#ffffff"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
